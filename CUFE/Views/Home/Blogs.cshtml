<!-- Start single blog -->
<div class="col-md-8 col-sm-8 col-xs-12">
    <div class="row">
        
       
        
        @{
                    if (ViewBag.Blogs != null)
                    {
                        //List<CUFE.Models.Blog> blogs = ViewBag.Blogs;
                        foreach (var blog in blogs)
                        {
                    <!-- Start single blog -->
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="single-blog">
                            <div class="single-blog-img">
                                <a href="blog-details.html">
                                    <img src="~/Content/eBusiness/img/blog/3.jpg" alt="">
                                </a>
                            </div>
                            <div class="blog-meta">
                                <span class="comments-type">
                                    <i class="fa fa-comment-o"></i>
                                    <a href="#">@blog.Title</a>
                                </span>
                                <span class="date-type">
                                    <i class="fa fa-calendar"></i>@blog.CreatedOn
                                </span>
                            </div>
                            <div class="blog-text">
                                <h4>
                                    <a href="#">@blog.Title</a>
                                </h4>
                                <p>
                                    @blog.ShortDescription
                                </p>
                            </div>
                            <span>
                                @*<a href="blog-details.html" class="ready-btn">Read more</a>*@
                                @Html.ActionLink("Read more","View","Blogs",blog.Oid,new { @class = "ready-btn" })
                            </span>
                        </div>
                    </div>
                    <!-- End single blog -->
                }

        }
        }
       
        
       
        
