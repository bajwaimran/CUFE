@section scripts{
    <script>
        $(document).ready(function () {
            $.ajax({
                type: "GET",
                url: "//api.openweathermap.org/data/2.5/weather?q=Bruchsal&appid=f8e67cd57e579392eb6f81824baf79ff",
                success: function (data) {
                    console.log(data);
                    var t = parseInt(data.main.temp) - 273;
                    var maxt = parseInt(data.main.temp_max) - 273;
                    var mint = parseInt(data.main.temp_min) - 273;
                    $("#idCityName").text(data.name);
                    $("#idHumidity").text(data.main.humidity + "%");
                    $("#idPressure").text(data.main.pressure);
                    $("#idTemprature").text(t);
                    $("#idMaxTemp").text(maxt);
                    $("#idMinTemp").text(mint);
                    $("#idWeather").text(data.weather[0].description);
                    $("#idWindDeg").text(data.wind.deg);
                    $("#idWindSpeed").text(data.wind.speed);
                },
                error: function () {
                    console.log("cannot fetch Waether information ");
                }

            });
        });
    </script>
}






